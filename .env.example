# Plane Discord Bot - Production Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/plane_discord_bot?schema=public"

# ============================================
# DISCORD
# ============================================
DISCORD_TOKEN=        # Your Discord bot token from Discord Developer Portal
DISCORD_CLIENT_ID=   # Your Discord application client ID
# Optional: For guild-specific command deployment during development
DISCORD_GUILD_ID=

# ============================================
# PLANE API
# ============================================
PLANE_API_KEY=your_plane_api_key            # Your Plane API key from Settings > API Tokens
PLANE_BASE_URL=https://plane.superalign.ai/api/v1
WORKSPACE_SLUG=your_workspace_slug          # Found in your Plane workspace URL
# PROJECT_ID=                               # Optional: Leave empty to sync ALL projects in workspace

# ============================================
# GEMINI AI
# ============================================
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash               # Model to use
GEMINI_TEMPERATURE=0.3                      # Temperature (0-1, lower = more consistent)

# ============================================
# SYNC CONFIGURATION
# ============================================
SYNC_INTERVAL_MINUTES=10                    # How often to sync from Plane (minutes)
SUMMARY_MAX_FACTS=100                       # Max facts per summary

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info                              # Logging level: debug, info, warn, error
ENABLE_FILE_LOGS=false                      # Enable logging to files: true/false
